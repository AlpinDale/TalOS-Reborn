rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /user_lore/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /user_data/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /user_info/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /characters/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /rooms/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /story_chapters/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /betaKeys/{allOthers=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /{allOthers=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
