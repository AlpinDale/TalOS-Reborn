{
  "compilerOptions": {
    "target": "es2016",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "./dist",
    "importHelpers": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "extends": "@tsconfig/node16/tsconfig.json"
}
