{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext", // Changed to NodeNext
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "../dist-server",
    "importHelpers": true
    // Removed outFile, adjust if necessary
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "extends": "@tsconfig/node16/tsconfig.json"
}